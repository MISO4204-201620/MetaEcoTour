# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index()

GET         /api/categorias/                  controllers.implementacion.catalogos.CategoriasCtrl.getCategorias()
GET         /api/categorias/new                controllers.Products.newProduct()
GET         /api/categorias/:id                controllers.Products.details(id: String)
POST        /api/categorias/                   controllers.implementacion.catalogos.CategoriasCtrl.save()
DELETE      /api/categorias/:id                controllers.implementacion.catalogos.CategoriasCtrl.delete(id: String)

GET         /api/products/                   controllers.Products.list()
GET         /api/productsJson/               controllers.Products.listJson()
GET         /api/products/new                controllers.Products.newProduct()
GET         /api/products/:id                controllers.Products.details(id: String)
POST        /api/products/                   controllers.Products.save()
DELETE      /api/products/:id                controllers.Products.delete(id: String)



# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.versioned(path="/public", file: Asset)
